{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "${workspaceFolder}/src/Includes/*.h",
                "-g",
                "${workspaceFolder}/src/Sources/*.cpp", 
                "-o",
                "${workspaceFolder}/src/Sources/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}